{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "Node",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
      "$lib": ["./src/lib"],
      "$utils": ["./src/utils"]
    }
  }
}
