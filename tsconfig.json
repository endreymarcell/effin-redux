{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "Node",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"],
      "$app": ["./src/app"],
      "$app/*": ["./src/app/*"],
      "$utils": ["./src/utils"],
      "$utils/*": ["./src/utils/*"]
    }
  }
}
